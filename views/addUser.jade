extends layout

block content
	title Add User
	.ui.container(style="margin: 15vh 0 0 0; padding: 0 8vh 0 0")
		.two.fields.center2
			.field
				i.add.user.icon.huge.red
			.field
				h2.ui.dividing.header Create User
		form.ui.form.box.center2#addUser(name='addemployee', method='post', action='/addUser')
			.field
				label Enter New Username
				.ui.input
					input(name="username", type='text', placeholder='Username')
			.field
				label Enter Password
				.ui.input
					input(name="password", type='password', placeholder='Password')
			.field
				label Retype Password
				.ui.input
					input(name="repass", type='password', placeholder='Retype Password')
			.ui.primary.submit.button Submit
			.ui.error.message
		script(type='text/javascript' src='/javascripts/scripts.js')
