	body
		.ui.page.container
			.ui.center.aligned.grid
				.row
				.row
				.row
				.row
					.ui.basic.segment.center.aligned
						h1
							| Apples & Berries
							br
							| Payroll System
				.five.wide.column
					form.ui.large.form#forgot(name='forgot', method='post', action='/forgot')
						.ui.stacked.segment
							.field
								.ui.left.icon.input
									i.user.icon
									input#username(type="text", name="username", placeholder="Username")
							button.ui.fluid.large.red.four.wide.button#submit Submit
						.ui.error.message
					.ui.message
						a(href="/login") Back to Login
		script(type='text/javascript' src='javascripts/scripts.js')
		script(type='text/javascript' src='javascripts/jquery.form.js')
		script(type='text/javascript').
			$(document).ready(function(){
				$('#username').focus();
			});
			$('form#forgot').ajaxForm({
				success: function(){
					alert("An email has been sent to you. Please confirm the link at least 1 hour from now.");
				},
				error: function(){
					alert("Invalid username!");
				}
			});
