extends layout

block content
	title Add CV
	.block-content-container.ui.container
		.two.fields.center2
			.field
				i.money.icon.massive.red
			.field
				h2.ui.dividing.header Check Voucher
		form.ui.box.center2.form#checkvoucher(name='checkvoucher', method='post', action='/checkvoucher')

			.field
				label Name
				.ui.input#name-input
					input(name="name", type='text', placeholder='Name')

			.field
				label Date
				.ui.calendar#checkDate
					.ui.input.left.icon#date-input
						i.calendar.icon
						input(name="date", type="text", placeholder="Date")

			.field
				label Amount
				.ui.input#amount-input
					input(name="amount", type="number", placeholder="Amount...")

			.field
				label Particulars
				.ui.input#particularsDropdown
					input(name='particulars', type="text", placeholder="Particulars...")

			.ui.modal
				i.close.icon
				.header Check Voucher Preview
				.content(style="padding-top: 0;")
					img.ui.centered.medium.image(src='images/header.png', style='padding-bottom: 1.5rem;')
					.ui.grid
						.one.wide.column.right-align
							b AN:
						.two.wide.column
							#AN.div-underline.center-align
								span
						.two.wide.column.right-align
							b Name:
						.four.wide.column
							#name.div-underline.center-align
								span
						.three.wide.column.right-align
							b Date Issued:
						.four.wide.column
							#dateToday.div-underline.center-align
								span
						.two.wide.column.right-align
							b Particulars:
						.five.wide.column
							#particulars.div-underline
								span.indent
						.three.wide.column.right-align
							b Amount:
						.six.wide.column
							#amount.div-underline
								span.indent
						.eleven.wide.column
						.five.wide.column
							b Signature:
							.div-underline
								span
									| &nbsp;
				.actions
					.ui.disabled.primary.button.submit Submit
					.ui.button.print Print

			.ui.primary.button#checkVoucher-preview Preview
			.ui.error.message

	script(type="text/javascript").
		var an =!{JSON.stringify(an)};
	script(type='text/javascript' src='javascripts/scripts.js')
	script.
		console.log($('#rangestart').calendar('get date'));
