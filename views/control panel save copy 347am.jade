extends layout

block content
	title Control Panel
	.block-grid.ui.middle.aligned.center.aligned.grid.stackable.doubling
		// Title
		.row#menu-row
			.section-title.ui.center.aligned
				h1 Control Panel 
		.row
		// 1st ROW Buttons
		.four.column.wide.row
			.column
				#BIR-module-button.ui.animated.fade.red.button.fluid(tabindex="0" onclick="location.replace('/BIR')")
					.visible.content
						.ui.container.main-menu-button
							h1 B I R
					.hidden.content
						| Update tax rates
			.column
				#SSS-module-button.ui.animated.fade.red.button.fluid(tabindex="0" onclick="location.replace('/SSS')")
					.visible.content
						.main-menu-button.ui.container
							h1 S S S
					.hidden.content
						| Update SSS fees
			.column
				#PhilHealth-module-button.ui.animated.fade.button.red.fluid(button="", tabindex="0" onclick="location.replace('/PH')")
					.visible.content
						.ui.container.main-menu-button
							h1 PhilHealth
					.ui.hidden.content
						.ui.center.aligned.fluid
							| Update PhilHealth
		// 2nd ROW Buttons
		.four.column.wide.row
			.column
				#add-user-button.ui.animated.fade.red.button.fluid(tabindex="0" onclick="location.replace('/addUser')")
					.visible.content
						.ui.container.main-menu-button
							h1 Add User
					.hidden.content
						| Create a new user
			.column
				#delete-user-button.ui.animated.fade.red.button.fluid(tabindex="0" onclick="location.replace('/deleteUser')")
					.visible.content
						.ui.container.main-menu-button
							h1 Delete User
					.hidden.content
						| Delete an existing user
			.column
				#back-up-module-button.ui.animated.fade.red.button.fluid(tabindex="0" onclick="location.replace('/backup')")
					.visible.content
						.ui.container.main-menu-button
							h1 Back Up
					.hidden.content
						| Back up files


	script(type='text/javascript', src='/javascripts/sorttable.js')