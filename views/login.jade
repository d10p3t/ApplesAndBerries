doctype html
html
	head
		title Login Page
		link(rel='stylesheet', type='text/css', href='/semantic/dist/semantic.min.css')
		link(rel='stylesheet', type='text/css', href='/bower_components/semantic-ui-calendar/dist/calendar.min.css')
		link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
	body
		.ui.page.container
			.ui.center.aligned.grid
				#login-box.five.wide.column
					form.ui.large.form#login(name='login', method='post', action='/login')
						.ui.stacked.segment
							#login-title.ui.basic.segment.center.aligned
									| Apples & Berries
									br
									| Payroll System
							.field
								.ui.left.icon.input
									i.user.icon
									input#username(type="text", name="username", placeholder="Username")
							.field
								.ui.left.icon.input
									i.lock.icon
									input#password(type="password", name="password", placeholder="Password")
							button#login-button.ui.fluid.large.red.button Login
						.ui.error.message
					.ui.message
						a(href="/forgot") Forgot Password

		script(type='text/javascript', src='/javascripts/jquery-3.1.1.min.js')
		script(type='text/javascript' src='/javascripts/scripts.js')
		script(type='text/javascript', src='/semantic/dist/semantic.min.js')
		script(type='text/javascript', src='/javascripts/printThis.js')
		script(type='text/javascript', src='/bower_components/semantic-ui-calendar/dist/calendar.min.js')
		script(type='text/javascript' src='/javascripts/jquery.form.js')
		script(type='text/javascript').
			$(document).ready(function(){
				$('#username').focus();
			});
		script.
			$('.form#login')
				.ajaxForm({
					error : function (response) {
						alert('Invalid Username or Password');
					},
					success : function(){
						window.location.replace('/');
					}
				});

			$('.form#login').form({
				fields:{
					username: 'empty',
					password: 'empty'
				}
			});
