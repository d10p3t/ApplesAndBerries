						.ui.grid
							.row
							.row
							.row
								.ui.container
									h1 B I R
							.row
							.row
					.hidden.content
						| Update tax rates
			.column
				#SSS-module-button.ui.animated.fade.red.button.fluid(tabindex="0" onclick="location.replace('/SSS')")
					.visible.content
						.ui.grid
							.row
							.row
							.row
								.ui.container
									h1 S S S
							.row
							.row
					.hidden.content
						| Update SSS fees
			.column
				#PhilHealth-module-button.ui.animated.fade.button.red.fluid(button="", tabindex="0" onclick="location.replace('/PH')")
					.visible.content
						.ui.grid
							.row
							.row
							.row
								.ui.container
									h1 PhilHealth
							.row					
							.row
					.ui.hidden.content
						.ui.center.aligned.fluid
							| Update PhilHealth
		// 2nd ROW Buttons
		.four.column.wide.row
			.column
				#add-user-button.ui.animated.fade.red.button.fluid(tabindex="0" onclick="location.replace('/addUser')")
					.visible.content
						.ui.grid
							.row
							.row
							.row
								.ui.container
									h1 Add User
							.row
							.row
					.hidden.content
						| Create a new user
			.column
				#delete-user-button.ui.animated.fade.red.button.fluid(tabindex="0" onclick="location.replace('/deleteUser')")
					.visible.content
						.ui.grid
							.row
							.row
							.row
								.ui.container
									h1 Delete User
							.row
							.row
					.hidden.content
